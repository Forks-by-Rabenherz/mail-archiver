@model MailArchiver.ViewModels.AccountExportViewModel
@using MailArchiver.Models
@inject Microsoft.Extensions.Localization.IStringLocalizer<MailArchiver.SharedResource> Localizer

@{
    ViewData["Title"] = @Localizer["ExportAccount"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Localizer["ExportAccount"]: @Model.MailAccountName</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Localizer["AccountName"]:</dt>
                                <dd class="col-sm-8">@Model.MailAccountName</dd>
                                
                                <dt class="col-sm-4">@Localizer["TotalEmails"]:</dt>
                                <dd class="col-sm-8">@Model.TotalEmailsCount.ToString("N0")</dd>
                                
                                <dt class="col-sm-4">@Localizer["IncomingEmails"]:</dt>
                                <dd class="col-sm-8">@Model.IncomingEmailsCount.ToString("N0")</dd>
                                
                                <dt class="col-sm-4">@Localizer["OutgoingEmails"]:</dt>
                                <dd class="col-sm-8">@Model.OutgoingEmailsCount.ToString("N0")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info alert-persistent">
                                <h5><i class="bi bi-info-circle"></i> @Localizer["ExportInfo"]</h5>
                                <p class="mb-0">@Localizer["ExportInfoText"]</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Export" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MailAccountId" />
                        <input type="hidden" asp-for="MailAccountName" />
                        <input type="hidden" asp-for="TotalEmailsCount" />
                        <input type="hidden" asp-for="IncomingEmailsCount" />
                        <input type="hidden" asp-for="OutgoingEmailsCount" />

                        <div class="mb-4">
                            <h6>@Localizer["ExportFormatSelection"]</h6>
                            <p class="text-muted small">@Localizer["ExportFormatSelectionInfo"]</p>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="Format" id="formatEML" value="@AccountExportFormat.EML" checked>
                                                <label class="form-check-label" for="formatEML">
                                                    <strong>@Localizer["EMLFormat"]</strong>
                                                </label>
                                            </div>
                                            <small class="text-muted">@Localizer["EMLFormatDescription"]</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" asp-for="Format" id="formatMBox" value="@AccountExportFormat.MBox">
                                                <label class="form-check-label" for="formatMBox">
                                                    <strong>@Localizer["MBoxFormat"]</strong>
                                                </label>
                                            </div>
                                            <small class="text-muted">@Localizer["MBoxFormatDescription"]</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info mb-3" id="formatInfo">
                            <div id="emlInfo" style="display: block;">
                                <h6><i class="bi bi-file-earmark-text"></i> @Localizer["EMLFormatInfo"]</h6>
                                <p class="mb-0">@Localizer["EMLFormatDescription"]</p>
                            </div>
                            <div id="mboxInfo" style="display: none;">
                                <h6><i class="bi bi-archive"></i> @Localizer["MBoxFormatInfo"]</h6>
                                <p class="mb-0">@Localizer["MBoxFormatDescription"]</p>
                            </div>
                        </div>

                        <div class="alert alert-warning alert-persistent">
                            <h6><i class="bi bi-exclamation-triangle"></i> @Localizer["ExportWarning"]</h6>
                            <ul class="mb-0">
                                <li>@Localizer["ExportWarningTime"]</li>
                                <li>@Localizer["ExportWarningSize"]</li>
                                <li>@Localizer["ExportWarningCleanup"]</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Details", new { id = Model.MailAccountId })" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["BackToAccount"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-download"></i> @Localizer["StartExport"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const formatRadios = document.querySelectorAll('input[name="Format"]');
            const emlInfo = document.getElementById('emlInfo');
            const mboxInfo = document.getElementById('mboxInfo');

            function updateFormatInfo() {
                const selectedFormat = document.querySelector('input[name="Format"]:checked').value;
                emlInfo.style.display = selectedFormat === '@AccountExportFormat.EML.ToString()' ? 'block' : 'none';
                mboxInfo.style.display = selectedFormat === '@AccountExportFormat.MBox.ToString()' ? 'block' : 'none';
            }

            formatRadios.forEach(function(radio) {
                radio.addEventListener('change', updateFormatInfo);
            });
            
            updateFormatInfo(); // Initial call
        });
    </script>
}
