                                    <button type="submit"
                                        class="btn @(item.IsEnabled ? "btn-outline-secondary" : "btn-outline-success") btn-sm w-100">
                                        <i class="bi bi-@(item.IsEnabled ? "pause" : "play")"></i>
                                        @(item.IsEnabled? @Localizer["Disable"] : @Localizer["Enable"])
                                    </button>
                                </form>
                            </div>
                            @if (item.IsEnabled && item.Provider != ProviderType.IMPORT)
                            {
                                <div class="col">
                                    <form asp-action="Sync" asp-route-id="@item.Id" method="post" class="w-100">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                            <i class="bi bi-arrow-clockwise"></i> Sync
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-12">
<button type="button" class="btn btn-outline-danger btn-sm w-100" data-bs-toggle="modal" data-bs-target="#deleteAccountModal-@item.Id">
                                            <i class="bi bi-trash"></i> @Localizer["Delete"]
                                        </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-envelope-x display-1 text-muted"></i>
                </div>
                <h5 class="text-muted">@Localizer["NoEmailAccountsConfigured"]</h5>
                <p class="text-muted">
                    @Localizer["AddFirstAccount"]
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-center">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> @Localizer["AddAccount"]
                    </a>
                    <div class="dropdown">
                        <button class="btn btn-outline-success dropdown-toggle" type="button" id="mobileImportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-upload"></i> @Localizer["Import"]
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="mobileImportDropdown">
                            <li><a class="dropdown-item" asp-action="ImportMBox"><i class="bi bi-file-earmark-text me-2"></i>@Localizer["ImportMBox"]</a></li>
                            <li><a class="dropdown-item" asp-action="ImportEml"><i class="bi bi-file-earmark-zip me-2"></i>@Localizer["ImportEml"]</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

