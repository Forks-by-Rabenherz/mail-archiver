@inject Microsoft.Extensions.Localization.IStringLocalizer<MailArchiver.SharedResource> Localizer
@model IEnumerable<MailArchiver.Models.ViewModels.MailAccountViewModel>
@{
    ViewData["Title"] = @Localizer["EmailAccounts"];
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">@Localizer["EmailAccounts"]</h1>
        <div class="d-flex gap-2">
            <a asp-action="ImportMBox" class="btn btn-outline-success btn-sm">
                <i class="bi bi-upload"></i>
                <span class="d-none d-sm-inline">@Localizer["ImportMBox"]</span>
            </a>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i>
                <span class="d-none d-sm-inline">@Localizer["AddAccount"]</span>
            </a>
        </div>
    </div>

    <div class="card d-none d-lg-block">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["EmailAddress"]</th>
                            <th>@Localizer["IMAPServer"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["LastSync"]</th>
                            <th>@Localizer["AutoDelete"]</th>
                            <th class="text-center">@Localizer["Akcije"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.IsEnabled ? "table-secondary" : "")">
                                <td>@item.Name</td>
                                <td>@item.EmailAddress</td>
                                <td>@(item.IsImportOnly ? "-" : item.ImapServer + ":" + item.ImapPort)</td>
                                <td>
                                    @if (item.IsEnabled)
                                    {
                                        <span class="badge bg-success">@Localizer["Enabled"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Localizer["Disabled"]</span>
                                    }
                                </td>
                                <td>
                                    @if (item.LastSync.HasValue)
                                    {
                                        <span class="utc-timestamp"
                                            data-utc-time="@item.LastSync.Value.ToString("yyyy-MM-ddTHH:mm:ss")">
                                            @item.LastSync.Value.ToString("g")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Localizer["NotSynced"]</span>
                                    }
</td>
                                <td>
                                    @if (item.DeleteAfterDays.HasValue)
                                    {
                                        <span class="badge bg-warning">@item.DeleteAfterDays.Value days</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Localizer["Disabled"]</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center align-items-center gap-1">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                            class="btn btn-info btn-sm d-flex align-items-center">
                                            <i class="bi bi-eye"></i>
                                            <span class="ms-1">@Localizer["Details"]</span>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                            class="btn btn-warning btn-sm d-flex align-items-center">
                                            <i class="bi bi-pencil"></i>
                                            <span class="ms-1">@Localizer["Edit"]</span>
                                        </a>

                                        <form asp-action="ToggleEnabled" asp-route-id="@item.Id" method="post"
                                            class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                class="btn @(item.IsEnabled ? "btn-outline-secondary" : "btn-outline-success") btn-sm d-flex align-items-center">
                                                <i class="bi bi-@(item.IsEnabled ? "pause" : "play")"></i>
                                                <span class="ms-1">@(item.IsEnabled ? @Localizer["Disable"] : @Localizer["Enable"])</span>
                                            </button>
                                        </form>

                                        @if (item.IsEnabled)
                                        {
                                            <form asp-action="Sync" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm d-flex align-items-center">
                                                    <i class="bi bi-arrow-clockwise"></i>
                                                    <span class="ms-1">@Localizer["Sync"]</span>
                                                </button>
                                            </form>
                                        }

                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                            class="btn btn-danger btn-sm d-flex align-items-center"
                                            onclick="return confirm('@string.Format(Localizer["DeleteAccountConfirm"], item.EmailAddress)');">
                                            <i class="bi bi-trash"></i>
                                            <span class="ms-1">@Localizer["Delete"]</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* Mobile/Tablet Cards - bis groÃŸe Bildschirme *@
    <div class="d-lg-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3 @(!item.IsEnabled ? "border-secondary" : "")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="card-title mb-0">@item.Name</h6>
                        @if (item.IsEnabled)
                        {
                            <span class="badge bg-success">@Localizer["Enabled"]</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Localizer["Disabled"]</span>
                        }
                    </div>
                    <p class="card-text small text-muted mb-2">@item.EmailAddress</p>
                    <p class="card-text small mb-2">
                        <strong>Server:</strong> @(item.IsImportOnly ? "-" : item.ImapServer + ":" + item.ImapPort)
                    </p>
                    <p class="card-text small mb-3">
                        <strong>@Localizer["LastSync"]:</strong>
                        @if (item.LastSync.HasValue)
                        {
                            <span class="utc-timestamp" data-utc-time="@item.LastSync.Value.ToString("yyyy-MM-ddTHH:mm:ss")">
                                @item.LastSync.Value.ToString("g")
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">@Localizer["NotSynced"]</span>
                        }
</p>
                    <p class="card-text small mb-3">
                        <strong>Auto Delete:</strong>
                        @if (item.DeleteAfterDays.HasValue)
                        {
                            <span class="badge bg-warning">@item.DeleteAfterDays.Value days</span>
                        }
                        else
                        {
                            <span class="text-muted">@Localizer["Disabled"]</span>
                        }
                    </p>
                    @* Mobile/Tablet Button Layout *@
                    <div class="d-grid gap-2">
                        <div class="row g-2">
                            <div class="col-6">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm w-100">
                                    <i class="bi bi-eye"></i> @Localizer["Details"]
                                </a>
                            </div>
                            <div class="col-6">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm w-100">
                                    <i class="bi bi-pencil"></i> @Localizer["Edit"]
                                </a>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col">
                                <form asp-action="ToggleEnabled" asp-route-id="@item.Id" method="post" class="w-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                        class="btn @(item.IsEnabled ? "btn-outline-secondary" : "btn-outline-success") btn-sm w-100">
                                        <i class="bi bi-@(item.IsEnabled ? "pause" : "play")"></i>
                                        @(item.IsEnabled? @Localizer["Disable"] : @Localizer["Enable"])
                                    </button>
                                </form>
                            </div>
                            @if (item.IsEnabled)
                            {
                                <div class="col">
                                    <form asp-action="Sync" asp-route-id="@item.Id" method="post" class="w-100">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                            <i class="bi bi-arrow-clockwise"></i> Sync
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-12">
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm w-100"
                                            onclick="return confirm('@string.Format(Localizer["DeleteAccountConfirm"], item.EmailAddress)');">
                                            <i class="bi bi-trash"></i> @Localizer["Delete"]
                                        </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-envelope-x display-1 text-muted"></i>
                </div>
                <h5 class="text-muted">@Localizer["NoEmailAccountsConfigured"]</h5>
                <p class="text-muted">
                    @Localizer["AddFirstAccount"]
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-center">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> @Localizer["AddAccount"]
                    </a>
                    <a asp-action="ImportMBox" class="btn btn-outline-success">
                        <i class="bi bi-upload"></i> @Localizer["ImportMBox"]
                    </a>
                </div>
            </div>
        }
    </div>

    @* Quick Actions fÃ¼r Mobile wenn Accounts vorhanden *@
    @if (Model.Any())
    {
        <div class="d-lg-none mt-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-6">
                            <a asp-action="ImportMBox" class="btn btn-outline-success w-100">
                                <i class="bi bi-upload d-block mb-1"></i>
                                <small>@Localizer["ImportMBox"]</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-action="Create" class="btn btn-outline-primary w-100">
                                <i class="bi bi-plus-circle d-block mb-1"></i>
                                <small>@Localizer["AddAccount"]</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Emails" asp-action="Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-search d-block mb-1"></i>
                                <small>@Localizer["SearchArchive"]</small>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Emails" asp-action="Jobs" class="btn btn-outline-warning w-100">
                                <i class="bi bi-clock-history d-block mb-1"></i>
                                <small>@Localizer["ViewJobs"]</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
