@model IEnumerable<MailArchiver.Models.ViewModels.MailAccountViewModel>
@{
    ViewData["Title"] = "Email Accounts";
}

<div class="container-fluid">
    <h1>Email Accounts</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Account</a>
    </p>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email Address</th>
                            <th>IMAP Server</th>
                            <th>Status</th>
                            <th>Last Sync</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.IsEnabled ? "table-secondary" : "")">
                                <td>@item.Name</td>
                                <td>@item.EmailAddress</td>
                                <td>@item.ImapServer:@item.ImapPort</td>
                                <td>
                                    @if (item.IsEnabled)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </td>
                                <td>
                                    @if (item.LastSync.HasValue)
                                    {
                                        @item.LastSync.Value.ToString("MM/dd/yyyy HH:mm:ss")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not yet synchronized</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                            class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                            class="btn btn-sm btn-danger">Delete</a>

                                        <form asp-action="ToggleEnabled" asp-route-id="@item.Id" method="post"
                                            style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                class="btn btn-sm @(item.IsEnabled ? "btn-outline-secondary" : "btn-outline-success")">
                                                @(item.IsEnabled ? "Disable" : "Enable")
                                            </button>
                                        </form>

                                        @if (item.IsEnabled)
                                        {
                                            <form asp-action="Sync" asp-route-id="@item.Id" method="post"
                                                style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success">Sync</button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>