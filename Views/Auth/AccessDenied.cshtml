@inject Microsoft.Extensions.Localization.IStringLocalizer<MailArchiver.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["AccessDeniedTitle"];
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="card login-card">
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="bi bi-shield-x display-3 text-danger"></i>
                <h2 class="mt-3">@Localizer["AccessDeniedTitle"]</h2>
                <p class="text-muted">@Localizer["AccessDeniedIntro"]</p>
            </div>
            <div class="alert alert-warning">
                <p>@Localizer["AccessDeniedLoggedInInfo1"]</p>
                <p>@Localizer["AccessDeniedLoggedInInfo2"]</p>
            </div>
            <div class="d-grid gap-2">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="bi bi-house-door me-2"></i>@Localizer["GoToDashboard"]
                </a>
                @using (Html.BeginForm("Logout", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right me-2"></i>@Localizer["SignOut"]
                    </button>
                }
            </div>
        </div>
        <div class="card-footer text-center text-muted">
            <small>@DateTime.Now.Year - s1t5</small>
        </div>
    </div>
</div>

