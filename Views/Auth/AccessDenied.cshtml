@{
    ViewData["Title"] = "Access Denied";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="card login-card">
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="bi bi-shield-x display-3 text-danger"></i>
                <h2 class="mt-3">Access Denied</h2>
                <p class="text-muted">You do not have permission to access this resource.</p>
            </div>

            <div class="alert alert-warning">
                <p>You are logged in, but your account does not have the required permissions to access this page.</p>
                <p>If you believe this is an error, please contact your system administrator.</p>
            </div>

            <div class="d-grid gap-2">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="bi bi-house-door me-2"></i>Go to Dashboard
                </a>
                @using (Html.BeginForm("Logout", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                    </button>
                }
            </div>
        </div>
        <div class="card-footer text-center text-muted">
            <small>@DateTime.Now.Year - s1t5</small>
        </div>
    </div>
</div>
